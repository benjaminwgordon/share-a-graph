<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="hero is-fullheight typewriter has-text-centered">
    <div class="hero-body">
      <div class="container">
        <div class="columns">
            <div class="column is-one-third is-offset-one-third is-primary rounded">
                <h1 class="title is-size-2" style="color:white">New User Registration</h1>
                <form action="/login/register" method="POST">
                    <p class="control has-icons-left has-icons-right"></p>
                    <div class="field">
                        <p class="control has-icons-left has-icons-right">
                            <input class="input" type="text" placeholder="Username" name="username" required />
                            <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                            </span>
                        </p>
                    </div>
                    <div class="field">
                        <p class="control has-icons-left has-icons-right">
                            <input class="input" type="email" placeholder="Email" name="email" required />
                            <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                            </span>
                        </p>
                    </div>
                    <div class="field">
                        <p class="control has-icons-left">
                            <input class="input" type="password" placeholder="Password" name="password" required />
                            <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                            </span>
                        </p>
                    </div>   
                    <input type="submit" class="button" value="Register">
                </form>
            </div>
        </div>
      </div>
    </div>
  </div>
